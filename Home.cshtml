@model SafeAdmin.Model.Member
@{
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}
<div id="wrapper">
    <header id="header">
        <div class="not-mobile">
            <img src="~/publicassets/images/logo.png" alt="SAFE App - Movement to disrupt the spread of STD's in our lifetime">
            <p class="lead">SAFE lets you privately show your verified STD status on your phone. Join the movement to make the world a safer (and more fun) place to be.</p>
        </div>
        <div class="mobile">
            <img src="~/publicassets/images/logo_SAFE_color.png" alt="SAFE App - Movement to disrupt the spread of STD's in our lifetime">
            <p class="lead">SAFE lets you to privately show your verified STD status on your phone.</p>
        </div>
    </header>


    <form onsubmit="return register.submit();" >
        <div class="mc4wp-form-fields">
            <em>Sign up to be considered as a beta tester and receive exclusive party invites.</em>
            <div class="form-group">
                <input id="Email" type="email" placeholder="Enter email" required="" class="form-control" onfocus="register.clearMessage();" />
                <input type="submit" value="Sign up">
                @*<span asp-validation-for="Email" class="text-danger"></span>*@
            </div>
            <div class="mc4wp-response" id="signupMessageContainer">
                <div class="mc4wp-alert mc4wp-success">
                    <p id="signupMessage"></p>
                </div>
            </div>
        </div>
    </form>

    <!-- Footer -->
    <footer id="footer">
        <ul class="icons">
            <li><a href="https://www.facebook.com/thesafesexapp/" target="_blank" class="icon fa-facebook"><span class="label">Facebook</span></a></li>
            <li><a href="https://www.twitter.com/thesafesexapp/" target="_blank" class="icon fa-twitter"><span class="label">Twitter</span></a></li>
            <li><a href="https://www.instagram.com/thesafesexapp/" target="_blank" class="icon fa-instagram"><span class="label">Instagram</span></a></li>
            <li><a href="mailto:info@safemovement.org?subject=Hello" class="icon fa-envelope-o"><span class="label">Email</span></a></li>
        </ul>
        <ul class="copyright">
            <li>&copy; SAFE Movement</li>
        </ul>
    </footer><!-- Scripts -->
</div>

